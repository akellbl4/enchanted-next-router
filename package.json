{
  "name": "enchanted-next-router",
  "version": "0.0.6-beta.3",
  "keywords": [
    "next",
    "nextjs",
    "router",
    "next/router",
    "next-router",
    "router",
    "enchanced-router",
    "enhanced-router"
  ],
  "description": "âœ¨ Polished API for Next.js Router",
  "author": {
    "name": "Pavel Mineev",
    "url": "https://pavel.mineev.me"
  },
  "repository": "git@github.com:akellbl4/enchanted-next-router.git",
  "license": "MIT",
  "scripts": {
    "build": "bunchee src/index.ts -m --no-sourcemap",
    "watch": "bunchee src/index.ts --watch",
    "prepublishOnly": "rm -rf dist && yarn build",
    "types:check": "tsc --noEmit",
    "format": "prettier --write \"{src,test,examples}/**/*.{ts,tsx}\"",
    "lint": "eslint \"{src,test,examples}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"{src,test,examples}/**/*.{ts,tsx}\" --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "register": "yarn link && cd node_modules/react && yarn link"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn types:check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint:fix",
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/react-hooks": "7.0.1",
    "@types/jest": "26.0.24",
    "@types/node": "16.3.2",
    "@types/react": "17.0.14",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "bunchee": "1.6.0",
    "concurrently": "6.2.0",
    "coveralls": "3.1.1",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest-dom": "3.9.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-testing-library": "4.9.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.0.1",
    "next": "11.0.0",
    "prettier": "2.3.2",
    "react": "17.0.1",
    "react-dom": "17.0.2",
    "ts-jest": "27.0.3",
    "typescript": "4.3.5"
  },
  "peerDependencies": {
    "next": "^10.0.0 || ^11.0.0",
    "react": "^16.11.0 || ^17.0.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "output": {
    "exports": "named"
  },
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/**"
  ]
}
